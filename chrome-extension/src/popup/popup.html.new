<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>SubPirate Helper</title>
  <link rel="stylesheet" href="popup.css">
</head>
<body class="bg-black text-white">
  <div class="container">
    <!-- Header with Logo -->
    <div class="header">
      <div class="logo-container">
        <img src="../images/SubPirate_light_logo_full_text.svg" alt="SubPirate" class="logo-text">
      </div>
    </div>

    <!-- Login Section (shown when not logged in) -->
    <div id="login-section" class="section">
      <p class="text-center">Sign in to access SubPirate features</p>
      <button id="login-button" class="btn btn-primary">Sign In with Email</button>
      <div class="or-divider">
        <span>OR</span>
      </div>
      <button id="google-login-button" class="btn btn-secondary">
        <svg viewBox="0 0 24 24" width="16" height="16" class="google-icon">
          <g transform="matrix(1, 0, 0, 1, 27.009001, -39.238998)">
            <path fill="#4285F4" d="M -3.264 51.509 C -3.264 50.719 -3.334 49.969 -3.454 49.239 L -14.754 49.239 L -14.754 53.749 L -8.284 53.749 C -8.574 55.229 -9.424 56.479 -10.684 57.329 L -10.684 60.329 L -6.824 60.329 C -4.564 58.239 -3.264 55.159 -3.264 51.509 Z" />
            <path fill="#34A853" d="M -14.754 63.239 C -11.514 63.239 -8.804 62.159 -6.824 60.329 L -10.684 57.329 C -11.764 58.049 -13.134 58.489 -14.754 58.489 C -17.884 58.489 -20.534 56.379 -21.484 53.529 L -25.464 53.529 L -25.464 56.619 C -23.494 60.539 -19.444 63.239 -14.754 63.239 Z" />
            <path fill="#FBBC05" d="M -21.484 53.529 C -21.734 52.809 -21.864 52.039 -21.864 51.239 C -21.864 50.439 -21.724 49.669 -21.484 48.949 L -21.484 45.859 L -25.464 45.859 C -26.284 47.479 -26.754 49.299 -26.754 51.239 C -26.754 53.179 -26.284 54.999 -25.464 56.619 L -21.484 53.529 Z" />
            <path fill="#EA4335" d="M -14.754 43.989 C -12.984 43.989 -11.404 44.599 -10.154 45.789 L -6.734 42.369 C -8.804 40.429 -11.514 39.239 -14.754 39.239 C -19.444 39.239 -23.494 41.939 -25.464 45.859 L -21.484 48.949 C -20.534 46.099 -17.884 43.989 -14.754 43.989 Z" />
          </g>
        </svg>
        Sign in with Google
      </button>
    </div>

    <!-- Subreddit Actions Section (shown when logged in) -->
    <div id="actions-section" class="section hidden">
      <div id="current-subreddit" class="subreddit-info">
        <p>Currently browsing: <span id="subreddit-name" class="subreddit-name">r/unknown</span></p>
      </div>
      
      <div class="action-buttons">
        <button id="save-subreddit" class="btn btn-action">
          <span class="icon">ğŸ“Œ</span> Save Subreddit
        </button>
        <button id="analyze-subreddit" class="btn btn-action">
          <span class="icon">ğŸ”</span> Analyze Subreddit
        </button>
        <button id="add-to-project" class="btn btn-action">
          <span class="icon">ğŸ“‚</span> Add to Project
        </button>
      </div>
      
      <div id="project-selector" class="project-selector hidden">
        <select id="project-list" class="select">
          <option value="">Select a project...</option>
        </select>
        <button id="confirm-add-to-project" class="btn btn-sm">Add</button>
      </div>
    </div>

    <!-- Status Messages -->
    <div id="status-message" class="status hidden"></div>

    <!-- Footer with User Info -->
    <div id="user-section" class="user-section hidden">
      <div class="user-info">
        <span id="user-name">User</span>
        <button id="logout-button" class="btn btn-sm">Sign Out</button>
      </div>
    </div>
  </div>

  <script src="popup.js"></script>
</body>
</html>
